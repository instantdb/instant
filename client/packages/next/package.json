{
  "name": "@instantdb/next",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "scripts": {
    "test": "vitest",
    "check-exports": "attw --pack .",
    "dev": "tshy --watch",
    "build:tshy": "tshy",
    "build:standalone": "vite build",
    "build": "rm -rf dist; npm run build:tshy && npm run build:standalone && npm run check-exports",
    "publish-package": "pnpm publish --access public --no-git-checks"
  },
  "peerDependencies": {
    "next": "^13 || ^14 || ^15",
    "react": ">=18"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@types/node": "^22.6.1",
    "@types/react": "^18",
    "@vitejs/plugin-react": "^4.3.1",
    "next": "^15.5.6",
    "react-dom": "18.3.1",
    "npm-run-all": "^4.1.5",
    "react": "18.3.1",
    "tshy": "^3.0.2",
    "typescript": "^5.9.3",
    "vite": "^5.2.0",
    "vitest": "^0.21.0"
  },
  "dependencies": {
    "@instantdb/core": "workspace:*",
    "@instantdb/react": "workspace:*",
    "@instantdb/version": "workspace:*"
  },
  "tshy": {
    "selfLink": false,
    "main": true,
    "module": true,
    "project": "./tsconfig.json",
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.tsx"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
