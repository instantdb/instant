{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "strict": true,
    "outDir": "dist/tsc",
    "moduleResolution": "nodenext",
    "rootDirs": ["src", "app"],
    "sourceMap": true,
    "jsx": "react",
    "checkJs": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lib": ["./src/index.tsx"]
    },
    "strictNullChecks": true
  }
}
