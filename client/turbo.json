{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "publish-package": {
      "cache": false,
      "dependsOn": ["build", "^publish-package"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "test:ci": {
      "outputs": []
    },
    "bench:ci": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "globalPassThroughEnv": ["NODE_AUTH_TOKEN", "NPM_CONFIG_USERCONFIG"]
  }
}
