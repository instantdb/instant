{
  "$schema": "https://turborepo.org/schema.json",
  "globalPassThroughEnv": [
    "NODE_AUTH_TOKEN",
    "NPM_CONFIG_USERCONFIG",
    "NPM_CONFIG_PROVENANCE",
    "GITHUB_ACTIONS"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "publish-package": {
      "cache": false,
      "dependsOn": ["build", "^publish-package"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "test:ci": {
      "outputs": []
    },
    "bench:ci": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
